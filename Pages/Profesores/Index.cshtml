@page
@model GestionCecepWEB.Pages.Profesores.IndexModel
@{
    ViewData["Title"] = "Index Profesores";
}
<h1>Index Profesores</h1>
<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Profesores[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesores[0].Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesores[0].Especialidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesores[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesores[0].Telefono)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Profesores)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Especialidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.IdProfesor" class="btn btn-warning">Edit</a>
                </td>
            </tr>            
        }
    </tbody>
</table>
