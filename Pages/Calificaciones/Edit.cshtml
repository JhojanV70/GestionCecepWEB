@page
@model GestionCecepWEB.Pages.Calificaciones.EditModel
@{
    ViewData["Title"] = "Editar Calificación";
}

<h1>Editar Calificación</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Calificacion.IdCalificacion" />
            <div class="form-group">
                <label asp-for="Calificacion.IdEstudiante" class="control-label"></label>
                <select asp-for="Calificacion.IdEstudiante" class="form-control" asp-items="@Model.Estudiantes">
                    <option value="">Selecciona un estudiante</option>
                </select>
                <span asp-validation-for="Calificacion.IdEstudiante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calificacion.IdCurso" class="control-label"></label>
                <select asp-for="Calificacion.IdCurso" class="form-control" asp-items="@Model.Cursos">
                    <option value="">Selecciona un curso</option>
                </select>
                <span asp-validation-for="Calificacion.IdCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calificacion.Nota" class="control-label"></label>
                <input asp-for="Calificacion.Nota" class="form-control" />
                <span asp-validation-for="Calificacion.Nota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calificacion.Fecha" class="control-label"></label>
                <input asp-for="Calificacion.Fecha" class="form-control" />
                <span asp-validation-for="Calificacion.Fecha" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}