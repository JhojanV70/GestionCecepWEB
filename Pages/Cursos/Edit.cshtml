@page
@model GestionCecepWEB.Pages.Cursos.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Curso.IdCurso" />
            <div class="form-group">
                <label asp-for="Curso.NombreCurso" class="control-label"></label>
                <input asp-for="Curso.NombreCurso" class="form-control" />
                <span asp-validation-for="Curso.NombreCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curso.Descripcion" class="control-label"></label>
                <input asp-for="Curso.Descripcion" class="form-control" />
                <span asp-validation-for="Curso.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curso.IdProfesor" class="control-label"></label>
                <select asp-for="Curso.IdProfesor" class="form-control" asp-items="@Model.Profesores">
                    <option value="">Seleccione un profesor</option>
                </select>
                <span asp-validation-for="Curso.IdProfesor" class="text-danger"></span>
            </div>
            <!-- Agregar más campos según sea necesario -->
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}