@page
@model GestionCecepWEB.Pages.Cursos.EditModel
@{
    ViewData["Title"] = "Edit Cursos";
}
<h1>Edit</h1>

<h4>Cursos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Curso.IdCurso" />
            <div class="form-group">
                <label asp-for="Curso.NombreCurso" class="control-label"></label>
                <input asp-for="Curso.NombreCurso" class="form-control" />
                <span asp-validation-for="Curso.NombreCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curso.Descripcion" class="control-label"></label>
                <input asp-for="Curso.Descripcion" class="form-control" />
                <span asp-validation-for="Curso.Descripcion" class="text-danger"></span>
            </div>
            <div class="form group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-page="./index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}