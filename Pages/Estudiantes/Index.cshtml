@page
@model GestionCecepWEB.Pages.Estudiantes.IndexModel
@{
    ViewData["Title"] = "Index Estudiantes";
}
<h1>Index Estudiantes</h1>
<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Estudiantes[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiantes[0].Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiantes[0].FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiantes[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiantes[0].Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiantes[0].Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estudiantes[0].IdCurso)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Estudiantes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCurso)
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.IdEstudiante" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
