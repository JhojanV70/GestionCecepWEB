@page
@model GestionCecepWEB.Pages.Horarios.EditModel
@{
    ViewData["Title"] = "Editar Horario";
}

<h1>Editar Horario</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Horario.IdHorario" />
            <div class="form-group">
                <label asp-for="Horario.IdCurso" class="control-label"></label>
                <select asp-for="Horario.IdCurso" class="form-control" asp-items="@Model.Cursos">
                    <option value="">Selecciona un curso</option>
                </select>
                <span asp-validation-for="Horario.IdCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horario.DiaSemana" class="control-label"></label>
                <input asp-for="Horario.DiaSemana" class="form-control" />
                <span asp-validation-for="Horario.DiaSemana" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horario.HoraInicio" class="control-label"></label>
                <input asp-for="Horario.HoraInicio" type="time" class="form-control" />
                <span asp-validation-for="Horario.HoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horario.HoraFin" class="control-label"></label>
                <input asp-for="Horario.HoraFin" type="time" class="form-control" />
                <span asp-validation-for="Horario.HoraFin" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}